generator client {
  provider = "prisma-client-js"
  url     = env("DATABASE_URL")
}

enum Turn {
  EMPTY
  X
  O
}

datasource db {
  provider = "postgresql"
}

model Grid {
  id        String     @id @default(cuid())
  createdAt DateTime   @default(now())
  cells     Json
  players   Json
  turn      Turn
  gameOver  Boolean    @default(false)
  winner    String?
}